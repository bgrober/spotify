

module.exports =  function pace(speed) {
   //convert to minutes
   speed = 60/(speed * .000621371 * 3600);
   //convert to time format
   var sign = speed < 0 ? "-" : "";
   var min = Math.floor(Math.abs(speed))
   var sec = Math.floor((Math.abs(speed) * 60) % 60);
   return sign + (min < 10 ? "0" : "") + min + ":" + (sec < 10 ? "0" : "") + sec;
};
